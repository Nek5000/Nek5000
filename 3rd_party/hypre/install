#!/bin/bash
set -e

if [ "$1" == "clean" ]; then
  rm -rf hypre-2.14.0 lib include 2>/dev/null
  exit 0
fi

if [ -f ./lib/libHYPRE.a ]; then
  exit 0
fi
if [ ! -f v2.14.0.tar.gz ]; then
  wget -O v2.14.0.tar.gz https://github.com/LLNL/hypre/archive/v2.14.0.tar.gz 
fi

rm -rf hypre-2.14.0
tar -zxf *.tar.gz
cd hypre*/src
./configure --prefix=`pwd`/../.. 
make -j4 install
