#!/bin/bash
set -e

VER=2.15.1

PREFIX=hypre
DIR=${PREFIX}_v${VER}
STAMP_FILE=install.stamp
ROOT=$PWD

clean() {
  rm -rf "$DIR/build" lib include $PREFIX $STAMP_FILE 2>/dev/null
}

distclean() {
  clean
  rm -rf ${PREFIX}_v* *.tar.gz 2>/dev/null
}

fetch() {
  rm -rf $DIR 2>/dev/null
  wget --no-check-certificate -O v$VER.tar.gz https://github.com/hypre-space/hypre/archive/v$VER.tar.gz
}

if [ "$1" == "clean" ]; then
   clean
   exit 0
fi

if [ "$1" == "distclean" ]; then
  distclean
  exit 0
fi

if [ "$1" == "fetch" ]; then
  distclean
  fetch
  exit 0
fi

if [ -f $STAMP_FILE ]; then
  stamp_ver=$(head -n 1 $STAMP_FILE)
  if [ "$stamp_ver" != "$VER" ]; then
    echo "Detected previously installed version: $stamp_ver (expected $VER)"
    echo "Cleaning and rebuilding..."
    clean
  fi
else
  clean
fi

if [ -f ./lib/libHYPRE.a ]; then
  exit 0
fi

if [ ! -f v$VER.tar.gz ]; then
  fetch
fi

if [ ! -d $DIR ]; then
  mkdir $DIR
  tar -zxvf v$VER.tar.gz -C $DIR --strip-components=1
fi

cd $DIR
mkdir -p build
cd build

set -x
cmake \
-DHYPRE_BIGINT=ON \
-DHYPRE_INSTALL_PREFIX=`pwd`/../.. \
-DBUILD_SHARED_LIBS=OFF \
-DMPI_C_COMPILER=`which $CC` \
-DHYPRE_USING_FEI=OFF \
../src
set +x

make -j4 install

cd $ROOT
ln -sfn $DIR/ $PREFIX

if [ "$?" -eq 0 ]; then
  cd $ROOT
  echo $VER > $STAMP_FILE
  echo "Successfully installed at $(date +"%Y-%m-%d %H:%M:%S %Z")" >> $STAMP_FILE
fi
