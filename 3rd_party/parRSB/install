#!/bin/bash
set -e

VER=0.2

if [ "$1" == "clean" ]; then
  rm -rf parRSB lib include 2>/dev/null 
  exit 0
fi

if [ -f ./lib/libparRSB.a ]; then
  exit 0
fi

if [ ! -d parRSB ]; then
  git clone https://github.com/thilinarmtb/parRSB.git -b parcon
fi

cd parRSB
set -x
make $PARRSB_OPT install examples
set +x
