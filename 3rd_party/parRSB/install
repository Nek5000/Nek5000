#!/bin/bash
set -e

VER=0.3

if [ "$1" == "clean" ]; then
  rm -rf parRSB/build lib include 2>/dev/null
  exit 0
fi

if [ -f ./lib/libparRSB.a ]; then
  exit 0
fi

if [ ! -d parRSB ]; then
  git clone https://github.com/thilinarmtb/parRSB.git -b gencon_and_mg_precon
fi

cd parRSB
set -x
make -j4 $PARRSB_OPT
set +x
