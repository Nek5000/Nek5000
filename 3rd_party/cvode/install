#!/bin/bash
set -e

VER=2.7.0

PREFIX=sundials
DIR=${PREFIX}_v${VER}
STAMP_FILE=install.stamp
ROOT=$PWD

clean() {
  rm -rf "$DIR/build" lib include $PREFIX $STAMP_FILE 2>/dev/null || true
}

if [ "$1" == "clean" ]; then
   clean
   exit 0
fi

if [ "$1" == "distclean" ]; then
  clean
  rm -rf ${PREFIX}_v* *.tar.gz 2>/dev/null || true
  exit 0
fi

if [ -f $STAMP_FILE ]; then
  stamp_ver=$(head -n 1 $STAMP_FILE)
  if [ "$stamp_ver" != "$VER" ]; then
    echo "Detected previously installed version: $stamp_ver (expected $VER)"
    echo "Cleaning and rebuilding..."
    clean
  fi
else
  clean
fi

if [ -f ./lib/libsundials_fcvode.a ]; then
  exit 0
fi

if [ ! -f v$VER.tar.gz ]; then
  rm -rf $DIR
  wget --no-check-certificate -O v$VER.tar.gz https://github.com/LLNL/sundials/archive/refs/tags/v$VER.tar.gz
fi

if [ ! -d $DIR ]; then
  mkdir $DIR
  tar -zxvf v$VER.tar.gz -C $DIR --strip-components=1
fi

cd $DIR
mkdir -p build
cd build

set -x
cmake \
-DBUILD_ARKODE=OFF \
-DBUILD_CVODES=OFF \
-DBUILD_IDA=OFF \
-DBUILD_IDAS=OFF \
-DBUILD_KINSOL=OFF \
-DEXAMPLES_INSTALL=OFF \
-DEXAMPLES_ENABLE=OFF \
-DCMAKE_INSTALL_PREFIX=`pwd`/../.. \
-DMPI_ENABLE=ON \
-DFCMIX_ENABLE=ON \
-DBUILD_SHARED_LIBS=OFF \
-DCMAKE_C_COMPILER=`which $CC` \
-DCMAKE_Fortran_COMPILER=`which $FC` \
-DMPI_MPICC=`which $CC` \
-DMPI_MPIF77=`which $FC` \
..
set +x

make install -j4

cd $ROOT
ln -s $DIR/ $PREFIX

if [ "$?" -eq 0 ]; then
  cd $ROOT
  echo $VER > $STAMP_FILE
  echo "Successfully installed at $(date +"%Y-%m-%d %H:%M:%S %Z")" >> $STAMP_FILE
fi
