c
c     GMRES variables
c
c     w is a work vector
c     c and s store the Givens rotations
c     V stores the orthogonal Krylov subspace basis
c          -1
c     Z = M   V
c
      real x(lx2*ly2*lz2*lelv), r(lx2*ly2*lz2*lelv)
     $   , w(lx2*ly2*lz2*lelv), h(lgmres,lgmres), gamma(lgmres+1)
     $   , c(lgmres), s(lgmres)
      common /gmres/ x, r, w, h, gamma, c, s
    
      real           v(lx2*ly2*lz2*lelv,lgmres)
      common /gmre1/ v

      real           z(lx2*ly2*lz2*lelv,lgmres)
      common /gmre2/ z

      real              ml(lx2*ly2*lz2*lelv), mu(lx2*ly2*lz2*lelv)
      common /spltprec/ ml                  , mu
