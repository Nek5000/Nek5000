      integer ktot
      parameter (ktot = lx1m*ly1m*lz1m*lelt)

      real            x(ldim*ktot*(1+mxprev)),b(ldim*ktot*(1+mxprev))
      common /srthov/ x                      ,b

      integer         napprox(2)
      common /srthoi/ napprox

      character*4     name4
      common /srthoc/ name4
