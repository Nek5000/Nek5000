C
C     Communication information
C     NOTE: NID is stored in 'SIZE' for greater accessibility
      PARAMETER (LP1=LP+1)
      COMMON /CUBE1/ NODE,PID,CD,NP,ALLNODES,NULLPID,MANAGER,NODE0
     $              ,IPRING(LP1),LFTNBR,RGTNBR
     $              ,Nprow,Npcol,ipp,iqq,prow(lp),pcol(lp)
      INTEGER        NODE,PID,CD,NP,ALLNODES,NULLPID,MANAGER,NODE0
     $              ,IPRING,LFTNBR,RGTNBR
     $              ,Nprow,Npcol,ipp,iqq,prow,pcol
      COMMON /CUBE2/ TYPE,TYPER
      INTEGER        TYPE,TYPER
C
C     HCUBE Direct stiffness array information
C
      COMMON /HCGLB/ NELG(0:LDIMT1)    , NELP(0:LDIMT1,LP)
     $              ,GLLEL(LELG)       , GLLNID(LELG)
     $              ,LGLEL(LELT,LP)
     $              ,NELGV,NELGT
     $              ,LELGWORK(LELG)
C
C     For storing error estimators for each element
C
      COMMON /CDERRO/ CDUMP(LELG)
C
      COMMON /HPACK/  WAITCNT,WAITDUM
      INTEGER         GLLEL,GLLNID,LGLEL,WAITCNT,WAITDUM
      COMMON /DIAGN/  IECHO,IDIAG(10)
      COMMON /DIAGR/  TIME0
      COMMON /DIAGL/  IFGPRNT
      LOGICAL IFGPRNT
      COMMON/PRECSN/ WDSIZE,ISIZE
      COMMON/PRECSL/ IFDBLAS
      INTEGER WDSIZE,ISIZE
      LOGICAL IFDBLAS
C
C     gs code handles
C
      common /gs_handles/ gsh, gsh_fld(0:ldimt3), flag_gs_init
      integer gsh,gsh_fld
      integer flag_gs_init
C
C     xxt handle
C
      common/xxt_handles/ xxth, flag_xxt_init
      integer flag_xxt_init,xxth
      common/xxt_handlel/ ifxxt
      logical ifxxt
