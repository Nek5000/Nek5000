#! /bin/bash
set -e

PROJECT="CSC235"
#PROJECT="CSC262"
REQ_WALLTIME="10"
REAFILE=$1
CORECOUNT=$2
NODECOUNT=$3

SESSION=${REAFILE%.rea}

echo "*** running session $SESSION"

echo $1        >  SESSION.NAME
echo `pwd`'/' >>  SESSION.NAME

OUTFILE="`pwd`/$SESSION.np=$CORECOUNT-summitdev-gpu-`date "+%F_%H_%M_%S"`"
touch $SESSION.rea

if ! bsubfile=`mktemp $SESSION.pbs.XXXXXX` ; then
   echo "Failed to create temp file for qsub! Exiting"
   exit 1
fi

chmod 777 $bsubfile

echo "#!/bin/bash" >> $bsubfile
echo "#BSUB -P $PROJECT" >> $bsubfile
echo "#BSUB -J $SESSION" >> $bsubfile
echo "#BSUB -o $PWD/$SESSION.np=$CORECOUNT-summitdev-gpu-`date "+%F_%H_%M_%S"`.output" >> $bsubfile
echo "#BSUB -e $PWD/$SESSION.np=$CORECOUNT-summitdev-gpu-`date "+%F_%H_%M_%S"`.error" >> $bsubfile
echo "#BSUB -W $REQ_WALLTIME" >> $bsubfile
echo "#BSUB -nnodes $NODECOUNT " >> $bsubfile
#echo "export PGI_ACC_NOTIFY=1" >> $bsubfile

echo " cd `pwd`">> $bsubfile
echo " jsrun -n$CORECOUNT -a1 -g1 ./nek5000  ">> $bsubfile

bsub  $bsubfile
rm $bsubfile
echo "job submitted on OLCF Summitdev, #GPUs=$CORECOUNT, #nodes=$NODECOUNT"

