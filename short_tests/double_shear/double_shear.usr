      subroutine userchk

      implicit none

      include 'SIZE'
      include 'SOLN'
      include 'INPUT'
      include 'TSTEP'
      
      real vort,w1,w2

      integer lt,nt
      parameter (lt=lx1*ly1*lz1*lelv)
      common /scrns/ vort(lt,3), w1(lt), w2(lt)

      real en, enx, eny
      real gl2norm

      ifto =.true.

      call comp_vort3(vort,w1,w2,vx,vy,vz)
      call copy(T,vort,lt)

      nt=nx1*ny1*nz1*nelv

      if (istep.eq.nsteps.or.lastep.eq.1) then
        enx = gl2norm(vx,nt)
        eny = gl2norm(vy,nt)
        en = enx**2 + eny**2    
        if (nid.eq.0) write(6,*) 'L2 norm: ', en
      endif

      return
      end
