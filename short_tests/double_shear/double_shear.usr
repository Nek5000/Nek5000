      subroutine useric (ix,iy,iz,ieg)

      implicit none

      include 'SIZE'
      include 'NEKUSE'
      include 'SOLN'

      integer ix,iy,iz,ieg

      real pi
      real one

      one = 1.0

      pi = 4.*atan(one)
      
      if (y.le.0.5) then
          ux = tanh(30.*(y-0.25))
      else
          ux = tanh(30.*(0.75-y))
      endif

      uy = 0.05*sin(2.*pi*x)
      uz = 0.0

      return
      end
