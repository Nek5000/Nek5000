      subroutine userbc (ix,iy,iz,iside,ieg)
      include 'SIZE'
      include 'TOTAL'
      include 'NEKUSE'

      common /fsparam/ eps,alpha,Re,Pg,We,gamma_r,gamma_i

      ux=0.0
      uy=0.0
      uz=0.0
      temp=0.0

      sigma = We

      return
      end
c-----------------------------------------------------------------------
      subroutine useric (ix,iy,iz,eg)
      include 'SIZE'
      include 'TOTAL'
      include 'NEKUSE'

      common /fsarray/ ub(lx1,ly1,lz1,lelt),vb(lx1,ly1,lz1,lelt)
      integer e,eg

      ux=0.0
      uy=0.0
      uz=0.0
      temp=0

      e  = gllel(eg)
      ux = ub(ix,iy,iz,e)
      uy = vb(ix,iy,iz,e)

      return
      end
