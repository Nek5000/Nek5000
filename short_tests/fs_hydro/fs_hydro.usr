      include 'SIZE'
      include 'TOTAL'
      include 'NEKUSE'

      common /fsparam/ eps,alpha,Re,Pg,We,gamma_r,gamma_i

      ffx = 2/Re
      ffy = -(Re*Pg)**(-2)
      ffz = 0.0

      return
      end
